{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://aaltebigep.github.io/data/members/profile.schema.json#",
  "title": "Üye Profili",
  "type": "object",
  "properties": {
    "id": {
      "$id": "#id",
      "type": "string",
      "title": "ID"
    },
    "name": {
      "$id": "#name",
      "type": "string",
      "title": "İsim"
    },
    "title": {
      "$id": "#title",
      "type": "string",
      "title": "Ünvan"
    },
    "generation": {
      "$id": "#generation",
      "type": "number",
      "title": "Dönem",
      "description": "AAL mezuniyet yılı dönemi"
    },
    "education": {
      "$id": "#education",
      "type": "object",
      "title": "Eğitim",
      "properties": {
        "k12": {
          "$id": "#education/k12",
          "type": "object",
          "title": "Üniversite Öncesi",
          "description": "Yalnızca üniversiteye başlamamış öğrenciler için.",
          "properties": {
            "school": {
              "$id": "#education/k12/school",
              "type": "string",
              "title": "Okul"
            },
            "grade": {
              "$id": "#education/k12/grade",
              "type": "string",
              "title": "Sınıf Düzeyi"
            },
            "class": {
              "$id": "#education/k12/class",
              "type": "string",
              "title": "Şube"
            }
          },
          "required": [
            "school"
          ],
          "additionalProperties": false
        },
        "degrees": {
          "$id": "#education/degrees",
          "type": "array",
          "title": "Üniversite Dereceleri",
          "items": {
            "type": "object",
            "properties": {
              "institution": {
                "$comment": "institution",
                "type": "string",
                "title": "Kurum"
              },
              "program": {
                "$comment": "program",
                "type": "string",
                "title": "Bölüm"
              },
              "degree": {
                "$comment": "degree",
                "type": "string",
                "title": "Derece",
                "enum": [
                  "Ön Lisans",
                  "Lisans",
                  "Yandal",
                  "Yüksek Lisans",
                  "Doktora"
                ]
              },
              "graduation": {
                "$comment": "graduation",
                "type": "number",
                "title": "Mezuniyet Yılı",
                "description": "Hâlâ okunuyorsa tahmini mezuniyet yılı."
              }
            },
            "required": [
              "institution",
              "program",
              "degree"
            ],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "contact": {
      "$id": "#contact",
      "type": "object",
      "title": "İletişim",
      "properties": {
        "email": {
          "$id": "#contact/email",
          "type": "string",
          "title": "E-posta Adresi",
          "format": "email"
        },
        "github": {
          "$id": "#contact/github",
          "type": "string",
          "title": "GitHub Kullanıcı Adı"
        },
        "linkedin": {
          "$id": "#contact/linkedin",
          "type": "string",
          "title": "LinkedIn Kullanıcı Adı"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "id",
    "name"
  ],
  "additionalProperties": false
}
