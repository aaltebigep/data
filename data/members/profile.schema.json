{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://aaltebigep.github.io/data/members/profile.schema.json#",
  "title": "Üye Profili",
  "type": "object",
  "properties": {
    "name": {
      "$id": "#name",
      "type": "string",
      "title": "İsim",
      "examples": ["Ali Veli Yılmaz"]
    },
    "pronouns": {
      "$id": "#pronouns",
      "type": "string",
      "title": "Pronouns",
      "description": "Kullandığın pronoun listede yoksa bize ulaşabilirsin!",
      "enum": [
        "she/her",
        "he/him",
        "they/them"
      ]
    },
    "generation": {
      "$id": "#generation",
      "type": "number",
      "title": "Dönem",
      "description": "Mezun olduğun veya olacağın AAL dönemi.",
      "examples": [135]
    },
    "teams": {
      "$id": "#teams",
      "type": "array",
      "title": "Ekipler",
      "items": {
        "type": "object",
        "properties": {
          "team": {
            "$comment": "team",
            "type": "string",
            "title": "Ekip",
            "enum": [
              "Medya ve Tasarım",
              "Bilişim Teknolojileri",
              "İnsan Kaynakları",
              "Kurumsal İlişkiler",
              "Etkinlik Düzenleme",
              "AB Koordinatörlüğü",
              "Kamp Koordinatörlüğü",
              "Mentörlük Koordinatörlüğü",
              "Yönetim",
              "Denetim"
            ]
          },
          "role": {
            "$comment": "role",
            "type": "string",
            "title": "Rol",
            "enum": [
              "Üye",
              "Başkan"
            ]
          }
        },
        "required": [
          "team",
          "role"
        ],
        "additionalProperties": false
      }
    },
    "education": {
      "$id": "#education",
      "type": "object",
      "title": "Eğitim",
      "properties": {
        "degrees": {
          "$id": "#education/degrees",
          "type": "array",
          "title": "Üniversite Dereceleri",
          "items": {
            "type": "object",
            "properties": {
              "institution": {
                "$comment": "institution",
                "type": "string",
                "title": "Kurum",
                "examples": ["Orta Doğu Teknik Üniversitesi"]
              },
              "program": {
                "$comment": "program",
                "type": "string",
                "title": "Bölüm",
                "examples": ["Bilgisayar Mühendisliği"]
              },
              "degree": {
                "$comment": "degree",
                "type": "string",
                "title": "Derece",
                "enum": [
                  "Ön Lisans",
                  "Lisans",
                  "Yandal",
                  "Yüksek Lisans",
                  "Doktora"
                ]
              },
              "graduation": {
                "$comment": "graduation",
                "type": "number",
                "title": "Mezuniyet Yılı",
                "description": "Hâlâ okuyorsan tahmini mezuniyet yılı.",
                "examples": [2048]
              }
            },
            "required": [
              "institution",
              "program",
              "degree"
            ],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "contact": {
      "$id": "#contact",
      "type": "object",
      "title": "İletişim",
      "properties": {
        "email": {
          "$id": "#contact/email",
          "type": "string",
          "title": "E-posta Adresi",
          "format": "email",
          "examples": ["ali-veli-yilmaz@tebimail.com"]
        },
        "github": {
          "$id": "#contact/github",
          "type": "string",
          "title": "GitHub Kullanıcı Adı",
          "examples": ["avyilmaz"]
        },
        "linkedin": {
          "$id": "#contact/linkedin",
          "type": "string",
          "title": "LinkedIn Kullanıcı Adı",
          "examples": ["ali-veli-yilmaz"]
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "name"
  ],
  "additionalProperties": false
}
