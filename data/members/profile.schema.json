{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://aaltebigep.github.io/data/members/profile.schema.json#",
  "title": "Üye Profili",
  "type": "object",
  "properties": {
    "id": {
      "$id": "#id",
      "type": "string",
      "title": "ID",
      "examples": ["ali-veli-yilmaz"]
    },
    "name": {
      "$id": "#name",
      "type": "string",
      "title": "İsim",
      "examples": ["Ali Veli Yılmaz"]
    },
    "title": {
      "$id": "#title",
      "type": "string",
      "title": "Ünvan",
      "description": "TEBİGEP'teki ünvanlarınız ve üye olduğunuz ekipler.",
      "examples": ["Bilişim Teknolojileri, Medya ve Tasarım"]
    },
    "generation": {
      "$id": "#generation",
      "type": "number",
      "title": "Dönem",
      "description": "AAL mezuniyet yılı döneminiz.",
      "examples": [135]
    },
    "education": {
      "$id": "#education",
      "type": "object",
      "title": "Eğitim",
      "properties": {
        "k12": {
          "$id": "#education/k12",
          "type": "object",
          "title": "Üniversite Öncesi",
          "description": "Yalnızca lise ve altında öğrenim görmekte olan öğrenciler için. Mezun veya üniversite öğrencisi iseniz boş bırakınız.",
          "properties": {
            "school": {
              "$id": "#education/k12/school",
              "type": "string",
              "title": "Okul",
              "examples": ["Ankara Atatürk Lisesi"]
            },
            "grade": {
              "$id": "#education/k12/grade",
              "type": "string",
              "title": "Sınıf Düzeyi",
              "enum": [
                "1",
                "2",
                "3",
                "4",
                "5",
                "6",
                "7",
                "8",
                "Hazırlık",
                "9",
                "10",
                "11",
                "12"
              ]
            },
            "class": {
              "$id": "#education/k12/class",
              "type": "string",
              "title": "Şube",
              "examples": ["C"]
            }
          },
          "required": [
            "school"
          ],
          "additionalProperties": false
        },
        "degrees": {
          "$id": "#education/degrees",
          "type": "array",
          "title": "Üniversite Dereceleri",
          "items": {
            "type": "object",
            "properties": {
              "institution": {
                "$comment": "institution",
                "type": "string",
                "title": "Kurum",
                "examples": ["Orta Doğu Teknik Üniversitesi"]
              },
              "program": {
                "$comment": "program",
                "type": "string",
                "title": "Bölüm",
                "examples": ["Bilgisayar Mühendisliği"]
              },
              "degree": {
                "$comment": "degree",
                "type": "string",
                "title": "Derece",
                "enum": [
                  "Ön Lisans",
                  "Lisans",
                  "Yandal",
                  "Yüksek Lisans",
                  "Doktora"
                ]
              },
              "graduation": {
                "$comment": "graduation",
                "type": "number",
                "title": "Mezuniyet Yılı",
                "description": "Hâlâ okuyorsanız tahmini mezuniyet yılı.",
                "examples": [2048]
              }
            },
            "required": [
              "institution",
              "program",
              "degree"
            ],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "contact": {
      "$id": "#contact",
      "type": "object",
      "title": "İletişim",
      "properties": {
        "email": {
          "$id": "#contact/email",
          "type": "string",
          "title": "E-posta Adresi",
          "format": "email",
          "examples": ["ali-veli-yilmaz@mail.com"]
        },
        "github": {
          "$id": "#contact/github",
          "type": "string",
          "title": "GitHub Kullanıcı Adı",
          "examples": ["avyilmaz"]
        },
        "linkedin": {
          "$id": "#contact/linkedin",
          "type": "string",
          "title": "LinkedIn Kullanıcı Adı",
          "examples": ["ali-veli-yilmaz"]
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "id",
    "name"
  ],
  "additionalProperties": false
}
